<% content_for :top_content do %>
    <div class="jumbotron">
        <div class="container">
            <h1>Welcome!</h1>
            <p>Register to get started.</p>
            <p>
                <%= link_to 'Register', new_admin_registration_path, class: 'btn btn-primary btn-lg' %>
            </p>
            <nav class="navbar navbar-inverse">
                <div class="container">
                    <ul class="nav navbar-nav pull-right">
                      	<% if admin_signed_in? %>
                            <li><%= link_to 'Log out', destroy_admin_session_path, method: :delete %></li>
                        <% else %>
                        	<li><%= link_to 'Log In', new_admin_session_path %></li>
                        	<li><%= link_to 'Sign Up', new_admin_registration_path %></li>
                        <% end %>
                    </ul>
                </div>
            </nav>
        </div>
    </div>
<% end %>
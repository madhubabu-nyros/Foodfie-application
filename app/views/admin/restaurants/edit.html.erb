<div class="container center">   
<%= form_for @restaurant, url: {action: :update} do |f| %>   
    <div>   
        <h3>Update Restaurant</h3>   
    </div>   
    <div>   
        <div class="form-group">   
            <label>Restaurant Name</label>   
            <%= f.text_field :name, :class => "form-control", :placeholder => 'Enter restaurant Name' %>
            <span class="err"><%= @restaurant.errors[:name].join('. ') %></span><br/>  
        </div>
        <div class="form-group"> 
            <%= f.fields_for :pictures do |p|%>
                <label>Upload Image</label> <br/>
                <%= p.file_field :name, :id => 'fup' %>
            <%end%>
        </div>
        <div class="form-group row">
            <div class="text-left"> 
                <%= link_to 'Back', { controller: 'restaurants', action: 'index'}, :class => "btn btn-warning" %>   
            </div>
            <div class="text-right">  
                <%= f.submit 'Update Restaurant', :class => "btn btn-info", :id => 'sub' %>   
            </div>
        </div>   
    </div>
<% end %>
</div>      
<div class="container center">   
    <%= form_for @dish, url: {action: :create} do |f| %>   
        <div>   
            <h3>Add Dish</h3>   
        </div>
        <div>   
            <div class="form-group">   
                <label>Dish Name</label>   
                <%= f.text_field :name, :class => "form-control", :placeholder => 'Enter Dish Name' %>
                <span class="err"><%= @dish.errors[:name].join('. ') %></span>    
            </div>
            <div class="form-group">   
                <label>Price</label>   
                <%= f.text_field :price, :class => "form-control", :placeholder => 'Enter price' %>
                <span class="err"><%= @dish.errors[:price].join('. ') %></span>
            </div>
            <div class="form-group">
                <label>Category</label>   
                <%= f.select( :category_id, options_from_collection_for_select(Category.all, "id", "name"), {}, {:class => 'form-control'}) %>
            </div>
            <div class="form-group"> 
                <%= f.fields_for :pictures do |p|%>
                    <label>Upload Image</label> <br/>
                    <%= p.file_field :name%>
                    <%= p.hidden_field :name %>
                <%end%>
            </div>  
        <div>
        <div class="form-group row">
            <div class="text-left"> 
                <%= link_to 'Back to Restaurant', admin_restaurants_path,	 :class => "btn btn-warning" %>
            </div>
            <div class="text-right">  
                <%= f.submit 'Create Dish', :class => "btn btn-info" %>   
            </div>
        </div>   
    <% end %>   
</div>  
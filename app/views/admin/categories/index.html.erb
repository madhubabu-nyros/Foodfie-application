<div class="container">   
  <h3>CATEGORY LIST</h3>   
    <div>   
      <%= link_to 'Add Category', new_category_path %>   
    </div>   
    <br>   
  <table border="2">   
    <thead>   
    <tr>   
      <th>Id</th>   
      <th>Name</th>   
      <th>Actions</th>   
    </tr>   
    </thead>   
    <tbody>   
      <% @categories.each do |c| %>   
        <tr>   
          <td><%= c.id %></td>   
          <td><%= c.name %></td>   
          <td>   
            <%= link_to 'Show', category_path(c) %>   
            <%= link_to 'Edit', edit_category_path(c) %>   
            <%= link_to 'Delete', category_path(c), method: :delete %>   
          </td>   
        </tr>   
      <% end %>   
    </tbody>   
  </table>   
</div>   
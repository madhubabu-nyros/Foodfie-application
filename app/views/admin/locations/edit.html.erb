<div class="container center">   
    <%= form_for @location, url: {action: :update} do |f| %>   
        <div>   
            <h3>Update Location</h3>   
        </div>
        <div class="form-group">   
            <label>Street</label>   
            <%= f.text_field :street, :class => "form-control", :placeholder => 'Enter Street' %>
            <span class="err"><%= @location.errors[:street].join('. ') %></span>
        </div>
        <div class="form-group">   
            <label>City</label>   
            <%= f.text_field :city, :class => "form-control", :placeholder => 'Enter City' %>
            <span class="err"><%= @location.errors[:city].join('. ') %></span>
        </div>
        <div class="form-group">   
            <label>State</label>   
            <%= f.text_field :state, :class => "form-control", :placeholder => 'Enter State' %>
            <span class="err"><%= @location.errors[:state].join('. ') %></span>   
        </div>
        <div class="form-group">   
            <label>Pincode</label>   
            <%= f.text_field :pincode, :class => "form-control", :placeholder => 'Enter Pincode' %>
            <span class="err"><%= @location.errors[:pincode].join('. ') %></span>  
        </div>
        <div class="form-group">   
            <label>Country</label>   
            <%= f.text_field :country, :class => "form-control", :placeholder => 'Enter Country' %>
            <span class="err"><%= @location.errors[:country].join('. ') %></span>  
        </div>  	
        <div class="form-group row">
            <div class="text-left"> 
                <%= link_to 'Back', admin_locations_path, :class => "btn btn-warning" %>   
            </div>
            <div class="text-right">  
                <%= f.submit 'Update Location', :class => "btn btn-info" %>   
            </div>
        </div>   
    <% end %>   
</div>  
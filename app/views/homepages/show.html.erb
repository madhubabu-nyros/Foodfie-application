<div class="dish">
	<div class="col-md-3"  style="float: left;clear: both">
		<% @items.pictures.each do|p|%>
				<%= image_tag(p.name_url.to_s, :class => 'image-box3') %><span class="caption1"><%= @items.name %></span>
			<% end %>
		<% @items.restaurants.each do|r|%>
				<h2 class="restaurant_title"><%= r.name %></h2>
		<% end %>
		<hr> 
	</div>
	<div class="col-md-9 image-box"  style="float: left">
		<div class="card">
			<% @items.pictures.each do|p|%>
				<%= image_tag(p.name_url.to_s, :class => 'image-box2') %>
			<% end %>
			<%= image_tag ("8.png") , :class => "fav"%>
			<div class="rating"><%= @items.ratings.average(:number) %></div>
			<div class="votes"><%= @items.ratings.count(:number) %> votes</div>
			<figcaption>
				<h2 class="caption"><%= @items.name %></h2>
				<% @items.restaurants.each do|r|%>
					<h2 class="restaurant"><%= r.name %><span style="float: right;margin-right: 10px;font-weight: bold;">$<%= @items.price%></span></h2>
				<% end %> 	
			</figcaption>
		</div>

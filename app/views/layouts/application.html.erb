<!DOCTYPE html>
<html>
    <head>
        <title>Foodfie</title>
        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBxBIfFGmL6adUEtytF2IYA10JZjQc5_sk&callback=initMap" async defer></script>
    </head>
    <body>
        <div class="container">
            <% flash.each do |key, value| %>
                <div class="alert alert-<%= key %>">
                 <%= value %>
                </div>
            <% end %>
        </div>
        <%= yield :top_content %>
        <div class="container">
            <h1><%= yield :header %></h1>
        </div>
        <%= yield %>
        <%= include_gon %>
    </body>
</html>
